<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="72dp"
    android:orientation="horizontal">

    <ly.img.android.pesdk.ui.widgets.AutoRotateLayout
        android:id="@+id/contentHolder"
        android:layout_width="72dp"
        android:layout_height="72dp"
        style="?attr/Imgly.PESDK.Editor.Panel.Tool.FolderItem">

        <ly.img.android.pesdk.ui.widgets.ImageSourceView
            android:id="@+id/image"
            style="?attr/Imgly.PESDK.Editor.Panel.Tool.FolderItem.Icon"/>

        <View
            android:id="@+id/selected_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/imgly_item_folder_overlay"/>

        <TextView
            android:id="@+id/label"
            style="?attr/Imgly.PESDK.Editor.Panel.Tool.FolderItem.Label"/>
    </ly.img.android.pesdk.ui.widgets.AutoRotateLayout>
</LinearLayout>