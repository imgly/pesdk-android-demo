<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    style="?attr/Imgly.PESDK.Editor.Panel.Sticker.StickerOption">
    <ly.img.android.pesdk.ui.widgets.HorizontalListView
        android:id="@+id/quickOptionList"
        app:animateItems="false"
        style="?attr/Imgly.PESDK.Editor.Panel.Sticker.SmallOptionList"/>
