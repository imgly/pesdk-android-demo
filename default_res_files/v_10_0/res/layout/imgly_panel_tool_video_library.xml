<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    style="?attr/Imgly.PESDK.Editor.Panel.VideoLibrary">
    <ly.img.android.pesdk.ui.widgets.DraggableExpandView
        android:id="@+id/expandView"
        style="?attr/Imgly.PESDK.Editor.Panel.VideoLibrary.Expandable">
        <ly.img.android.pesdk.ui.widgets.GridListView
            android:id="@+id/grid"
            app:spanSize="120dp"
            android:background="#FF000000"
            style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery.VideoLibraryGrid.Container"/>
        <ImageView
            android:id="@id/draggerThumb"
            style="?attr/Imgly.PESDK.Editor.Panel.VideoLibrary.Thumb"/>
    </ly.img.android.pesdk.ui.widgets.DraggableExpandView>
    <include layout="@layout/imgly_option_list"
        style="?attr/Imgly.PESDK.Editor.Panel.VideoLibrary.OptionList"/>
</RelativeLayout>
