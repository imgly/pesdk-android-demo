<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    style="?attr/Imgly.PESDK.Editor.Panel.Transform">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/imgly_slider_background_color">
        <ly.img.android.pesdk.ui.widgets.AutoRotateImageSource
            android:id="@+id/buttonHorizontalFlip"
            style="?attr/Imgly.PESDK.Editor.Panel.Transform.Button.Flip"/>
        <ly.img.android.pesdk.ui.widgets.AdjustSlider
            android:id="@+id/slider"
            style="?attr/Imgly.PESDK.Editor.Panel.Transform.Slider"/>
        <ly.img.android.pesdk.ui.widgets.AutoRotateImageSource
            android:id="@+id/buttonRotateCCW"
            style="?attr/Imgly.PESDK.Editor.Panel.Transform.Button.Rotate"/>
    </LinearLayout>
    <include layout="@layout/imgly_option_list"/>
</LinearLayout>
