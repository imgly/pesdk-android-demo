<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery">
    <ly.img.android.pesdk.ui.widgets.DraggableExpandView
        android:id="@+id/expandView"
        style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery.Expandable">
        <ly.img.android.pesdk.ui.widgets.VerticalListView
            android:id="@+id/songList"
            style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery.AudioGalleryVertical.Container"/>
        <ImageView
            android:id="@id/draggerThumb"
            style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery.Thumb"/>
    </ly.img.android.pesdk.ui.widgets.DraggableExpandView>
    <include layout="@layout/imgly_option_list"
        style="?attr/Imgly.PESDK.Editor.Panel.AudioGallery.OptionList"/>
</RelativeLayout>
