<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ly.img.android.pesdk.ui.widgets.HorizontalListView
        android:id="@+id/quickOptionList"
        style="@style/Imgly.PESDK.Editor.Panel.Adjust.SmallOptionList"/>
    <LinearLayout style="@style/Imgly.PESDK.Editor.Panel.VideoTrim"
        android:orientation="vertical">
        <ly.img.android.pesdk.ui.widgets.TrimSlider
            style="@style/Imgly.PESDK.Editor.Panel.default.OptionContainer"
            android:id="@+id/trimSlider"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:paddingLeft="28dp"
            android:paddingTop="12dp"
            android:paddingRight="28dp"
            android:paddingBottom="12dp"/>
        <ly.img.android.pesdk.ui.widgets.VideoComposerView
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="88dp"/>
    </LinearLayout>
</LinearLayout>