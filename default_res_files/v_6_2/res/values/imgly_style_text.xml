<resources>

    <style name="Imgly.PESDK.Editor.Panel.Text" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/imgly_editor_text_background</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Text.SmallOptionList" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_option_container_height</item>
        <item name="android:layout_marginTop">@dimen/small_option_container_margin</item>
        <item name="android:layout_marginBottom">98dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Text.OptionList" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Text.TextOptions" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Text.InputField" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">5</item>
        <item name="android:maxLines">50</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/imgly_text_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/pesdk_text_text_editTextPlaceholder</item>
        <item name="android:text"></item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>