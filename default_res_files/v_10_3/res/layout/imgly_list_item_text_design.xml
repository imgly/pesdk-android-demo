<ly.img.android.pesdk.ui.widgets.AutoRotateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentHolder"
    style="?attr/Imgly.PESDK.Editor.Panel.TextDesign.TextDesignItem">
    <ly.img.android.pesdk.ui.widgets.ImageSourceView
        android:id="@+id/image"
        style="?attr/Imgly.PESDK.Editor.Panel.TextDesign.TextDesignItem.Icon"/>
    <ly.img.android.pesdk.ui.widgets.ImageSourceView
        android:id="@+id/selected_overlay"
        app:srcCompat="@drawable/imgly_item_selected_overlay"
        style="?attr/Imgly.PESDK.Editor.Panel.TextDesign.TextDesignItem.Overlay"/>
    <ly.img.android.pesdk.ui.widgets.ImageSourceView
        android:id="@+id/selected_shuffle"
        app:srcCompat="@drawable/imgly_icon_shuffle"
        style="?attr/Imgly.PESDK.Editor.Panel.TextDesign.TextDesignItem.Overlay.Icon"/>
    <RelativeLayout
        style="?attr/Imgly.PESDK.Editor.Panel.TextDesign.TextDesignItem.Border"/>
</ly.img.android.pesdk.ui.widgets.AutoRotateLayout>