<ly.img.android.pesdk.ui.widgets.AutoRotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/Imgly.PESDK.Editor.Panel.Option"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    android:alpha="0.7">

    <LinearLayout
        android:id="@+id/contentHolder"
        style="?attr/Imgly.PESDK.Editor.Panel.Option.OptionItem"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ly.img.android.pesdk.ui.widgets.ImageSourceView
            style="?attr/Imgly.PESDK.Editor.Panel.Option.OptionItem.Icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imgly_icon_option_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="@string/vesdk_trim_add_clip_button"
            android:textColor="?attr/imgly_text_color" />
    </LinearLayout>
</ly.img.android.pesdk.ui.widgets.AutoRotateLayout>
