    <RelativeLayout
        android:id="@+id/itemOptionIcon"
        style="?attr/Imgly.PESDK.Editor.Panel.Color.ColorPipetteItem.Border">

        <ly.img.android.pesdk.ui.widgets.ImageSourceView
            app:srcCompat="@drawable/imgly_icon_item_options"
