<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentHolder"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/Imgly.PESDK.Editor.Panel.Color.ColorItem">

    <View
        android:id="@+id/colorView"
        style="?attr/Imgly.PESDK.Editor.Panel.Color.ColorItem.Background"/>

    <ly.img.android.pesdk.ui.widgets.ImageSourceView
        app:srcCompat="@drawable/imgly_icon_option_color_pipette"
