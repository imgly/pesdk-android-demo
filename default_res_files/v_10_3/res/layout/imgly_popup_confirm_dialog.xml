<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationBackground"
    style="?attr/Imgly.PESDK.Editor.Popup.Confirm">
    <LinearLayout
        style="?attr/Imgly.PESDK.Editor.Popup.Confirm.Background">
        <TextView
            android:id="@+id/titleText"
            android:text="@string/pesdk_editor_title_closeEditorAlert"
            style="?attr/Imgly.PESDK.Editor.Popup.Confirm.Title"/>
        <TextView
            android:id="@+id/contentText"
            android:text="@string/pesdk_editor_text_closeImageEditorAlert"
            style="?attr/Imgly.PESDK.Editor.Popup.Confirm.Text"/>
        <LinearLayout
            style="?attr/Imgly.PESDK.Editor.Popup.Confirm.ButtonContainer">
            <Button
                android:id="@+id/disagreeButton"
                android:text="@string/pesdk_editor_button_closeEditorAlertCancelation"
                style="?attr/Imgly.PESDK.Editor.Popup.Button.Disagree"/>
            <Button
                android:id="@+id/agreeButton"
                android:text="@string/pesdk_editor_button_closeEditorAlertConfirmation"
                style="?attr/Imgly.PESDK.Editor.Popup.Confirm.Button.Agree"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>