<ly.img.android.pesdk.ui.widgets.AutoRotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem">
    <RelativeLayout
        android:id="@+id/contentHolder"
        style="?attr/Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem.Holder">
        <ly.img.android.pesdk.ui.widgets.ImageSourceView
            android:id="@+id/image"
            style="?attr/Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem.Icon"
            android:layout_centerInParent="true"
            android:background="#FF000000"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imgly_icon_wait"/>
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true" android:textColor="#FFFF0000"/>
    </RelativeLayout>
</ly.img.android.pesdk.ui.widgets.AutoRotateLayout>
