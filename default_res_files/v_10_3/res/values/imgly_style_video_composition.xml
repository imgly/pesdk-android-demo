<resources>

    <style name="Imgly.PESDK.Editor.Panel.VideoComposition" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/imgly_optionToolBar_background_color</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">@dimen/container_item_width</item>
        <item name="android:layout_height">@dimen/container_item_height</item>
        <item name="android:layout_marginTop">@dimen/container_item_marginTop</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem.Holder" parent="Imgly.PESDK">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/imgly_item_border</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.VideoComposition.VideoItem.Icon" parent="Imgly.PESDK.default.Item.Icon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

</resources>