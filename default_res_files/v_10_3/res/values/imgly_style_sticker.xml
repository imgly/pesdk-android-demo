<resources>

    <style name="Imgly.PESDK.Editor.Panel.Sticker" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerItem" parent="Imgly.PESDK.default.Item">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerItem.Label" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerItem.Icon" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerUploadItem" parent="Imgly.PESDK.default.Item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerUploadItem.Label" parent="Imgly.PESDK.default.Item.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/pesdk_sticker_button_add</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/imgly_lable_color_states</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerUploadItem.Icon" parent="Imgly.PESDK.default.Item.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerCategoryItem" parent="Imgly.PESDK.default.Item">
        <item name="android:layout_marginTop">@dimen/container_item_marginTop</item>
        <item name="android:background">@drawable/imgly_item_border</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerCategoryItem.Label" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ag√∂b</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerCategoryItem.Icon" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.Expandable" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">88dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.Expandable.Grid" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:background">?attr/imgly_sticker_selection_background_color</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.Expandable.Thumb" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">14dp</item>
        <item name="srcCompat">@drawable/imgly_list_thumb_handle</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/imgly_list_thumb</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.SeekSlider" parent="Imgly.PESDK.SeekSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.StickerOption" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.OptionList" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Sticker.SmallOptionList" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_option_container_height</item>
        <item name="android:layout_marginTop">@dimen/small_option_container_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_option_container_margin</item>
    </style>

</resources>