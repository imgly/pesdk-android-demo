<resources>

    <style name="Imgly.PESDK.Editor.Panel.Filter" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Filter.FilterItem" parent="Imgly.PESDK.default.Item">
        <item name="android:layout_marginTop">@dimen/container_item_marginTop</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Filter.FilterItem.Border" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/imgly_item_border</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Filter.FilterItem.Label" parent="Imgly.PESDK.default.Item.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_label_text_size</item>
        <item name="android:textColor">@color/imgly_text_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/imgly_list_item_label_background</item>
        <item name="android:text">@string/pesdk_filter_asset_none</item>
        <item name="android:lines">1</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Filter.FilterItem.Icon" parent="Imgly.PESDK.default.Item.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/filter_list_margin_left</item>
        <item name="android:layout_marginStart">@dimen/filter_list_margin_left</item>
        <item name="android:layout_marginRight">@dimen/filter_list_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/filter_list_margin_right</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Filter.SeekSlider" parent="Imgly.PESDK.SeekSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>