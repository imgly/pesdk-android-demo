<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="400" android:exitFadeDuration="400">
    <item android:state_selected="false">
        <layer-list>
            <item android:height="80dp" android:top="0dp" android:left="0dp">
                <shape>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:height="80dp" android:top="0dp" android:left="0dp">
                <shape>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:height="2dp" android:top="78dp" android:left="4dp" android:right="4dp">
                <shape>
                    <solid android:color="#FF43ADEB"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>