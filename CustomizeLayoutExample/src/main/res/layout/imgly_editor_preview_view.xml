<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/imageResultContainer"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <ly.img.android.sdk.views.PicturePreviewView
            android:id="@+id/imageResultView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp" />
        <ly.img.android.sdk.cropper.cropwindow.CropOverlayView
            android:id="@+id/cropOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ly.img.android.sdk.views.LayerContainerView
        android:id="@+id/stickerHolderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:clipToPadding="false"
        android:clipChildren="false" />
    <ly.img.android.sdk.views.FrameView
        android:id="@+id/frameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</merge>